---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  currentPath?: string;
}

const { 
  title, 
  description = 'Transform your espresso machine with precise PID temperature control, WiFi monitoring, and OTA updates. Open-source firmware for coffee enthusiasts.',
  currentPath = '/' 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="espresso, coffee, PID, firmware, raspberry pi pico, esp32, open source, temperature control" />
    <meta name="theme-color" content="#391f12" />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-YMSSDYE742"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() { dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', 'G-YMSSDYE742');
    </script>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://brewos.io" />
    <meta property="og:image" content="https://brewos.io/assets/sizes/social/icon/full-color/Brewos-1080x1080.png" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/sizes/favicon/icon/full-color/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/sizes/favicon/icon/full-color/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/sizes/favicon/icon/full-color/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/sizes/favicon/icon/full-color/apple-touch-icon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <slot name="head" />
  </head>
  <body>
    <Header currentPath={currentPath} />
    
    <main>
      <slot />
    </main>

    <Footer />

    <!-- Analytics tracking -->
    <script is:inline>
      function trackEvent(category, action, label) {
        if (typeof gtag === 'function') {
          gtag('event', action, {
            event_category: category,
            event_label: label,
          });
        }
      }

      document.querySelectorAll('.btn-primary, .btn-cta-primary, .btn-accent').forEach(btn => {
        btn.addEventListener('click', () => {
          trackEvent('CTA', 'click', btn.textContent.trim());
        });
      });

      document.querySelectorAll('a[href*="github.com/mizrachiran/brewos"]').forEach(link => {
        link.addEventListener('click', () => {
          trackEvent('GitHub', 'click', link.closest('.cta-section') ? 'CTA Section' : 'General');
        });
      });
    </script>
  </body>
</html>

