---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  {
    title: 'Precision PID Control',
    description: 'Dual independent PID loops maintain sub-degree temperature stability for both brew and steam boilers. Achieve café-quality consistency at home.',
    icon: 'target'
  },
  {
    title: 'Cloud Connected',
    description: 'Monitor and control your machine from anywhere in the world. Real-time temperatures, pressure, and shot data at your fingertips via MQTT.',
    icon: 'cloud'
  },
  {
    title: 'OTA Updates',
    description: 'Keep your machine running the latest features with wireless firmware updates. No cables, no hassle, just better coffee.',
    icon: 'refresh'
  },
  {
    title: 'Brew-by-Weight',
    description: 'Connect your Bluetooth scale for automatic shot stopping. Achieve consistent ratios every time with Acaia, Felicita, and more.',
    icon: 'scale'
  },
  {
    title: 'Profiling & Analytics',
    description: 'Create custom pressure and flow profiles with pre-infusion and ramps. Track every shot with detailed analytics and insights.',
    icon: 'pulse'
  },
  {
    title: 'Smart Schedules',
    description: 'Wake up to a pre-heated machine. Set daily schedules, auto-sleep timers, and energy-saving modes tailored to your routine.',
    icon: 'clock'
  },
    {
    title: 'Safety First',
    description: 'Hardware watchdog, temperature limits, water interlocks, and fail-safe design. Your machine is protected at every level.',
    icon: 'shield'
  },
  {
    title: 'Faster Heat-Up',
    description: 'Intelligent heating algorithms get your machine ready quicker. Smart power management reduces wait time without compromising stability.',
    icon: 'bolt'
  }
];

const steps = [
  { title: 'Get the Hardware', description: 'Order the BrewOS controller kit from our store' },
  { title: 'Flash Firmware', description: 'Download and flash BrewOS to your controller' },
  { title: 'Install & Wire', description: 'Replace the stock controller and connect sensors' },
  { title: 'Configure & Brew', description: 'Set your preferences and start pulling perfect shots' }
];

---

<BaseLayout title="BrewOS - Open Source Espresso Machine Firmware" currentPath="/">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <div class="hero-badge">
            <span class="dot"></span>
            Open Source & Community Driven
          </div>
          <h1>Unlock Your Espresso Machine's <span>Full Potential</span></h1>
          <p class="hero-description">
            Professional-grade firmware that transforms your espresso machine with precise PID control, 
            real-time monitoring, and smart features. Built by coffee enthusiasts, for coffee enthusiasts.
          </p>
          <div class="hero-cta">
            <a href="https://cloud.brewos.io/?demo=true" class="btn btn-primary" target="_blank">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="5 3 19 12 5 21 5 3"/>
              </svg>
              Try Live Demo
            </a>
            <a href="https://github.com/mizrachiran/brewos" class="btn btn-secondary" target="_blank">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View on GitHub
            </a>
          </div>
          <div class="hero-stats">
            <div class="stat">
              <div class="stat-value">±0.5°C</div>
              <div class="stat-label">Temperature Stability</div>
            </div>
            <div class="stat">
              <div class="stat-value">100+</div>
              <div class="stat-label">Supported Machines</div>
            </div>
            <div class="stat">
              <div class="stat-value">100%</div>
              <div class="stat-label">Open Source</div>
            </div>
          </div>
        </div>
        <div class="hero-visual">
          <img src="/assets/compositions/icon/full-color/Brewos-1080x1080.png" alt="BrewOS Logo" class="hero-image" />
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features" id="features">
    <div class="container">
      <div class="features-layout">
        <div class="features-header">
          <span class="section-label">Features</span>
          <h2>Everything You Need for Perfect Espresso</h2>
        </div>
        <div class="features-list">
          {features.slice(0, 6).map(feature => (
            <div class="feature-item">
              <div class="feature-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  {feature.icon === 'target' && <><circle cx="12" cy="12" r="10" /><circle cx="12" cy="12" r="6" /><circle cx="12" cy="12" r="2" /></>}
                  {feature.icon === 'cloud' && <><path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z" /></>}
                  {feature.icon === 'refresh' && <><path d="M21 2v6h-6" /><path d="M3 12a9 9 0 0 1 15-6.7L21 8" /><path d="M3 22v-6h6" /><path d="M21 12a9 9 0 0 1-15 6.7L3 16" /></>}
                  {feature.icon === 'scale' && <><rect x="3" y="3" width="18" height="18" rx="2" /><path d="M12 8v8" /><path d="M8 12h8" /></>}
                  {feature.icon === 'shield' && <><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" /></>}
                  {feature.icon === 'pulse' && <><polyline points="22 12 18 12 15 21 9 3 6 12 2 12" /></>}
                  {feature.icon === 'clock' && <><circle cx="12" cy="12" r="10" /><polyline points="12 6 12 12 16 14" /></>}
                  {feature.icon === 'chart' && <><line x1="18" y1="20" x2="18" y2="10" /><line x1="12" y1="20" x2="12" y2="4" /><line x1="6" y1="20" x2="6" y2="14" /></>}
                </svg>
              </div>
              <div class="feature-content">
                <h3>{feature.title}</h3>
                <p>{feature.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Integrations Section -->
  <section class="integrations" id="integrations">
    <div class="container">
      <div class="integrations-layout">
        <div class="integrations-header">
          <span class="section-label">Integrations</span>
          <h2>Open & Connected</h2>
          <p class="integrations-desc">Control your machine from anywhere. Seamlessly connects with your favorite platforms.</p>
        </div>
        
        <!-- BrewOS Cloud Hero -->
        <div class="cloud-hero">
          <div class="cloud-hero-content">
            <div class="cloud-badge">☁️ Free & Hosted</div>
            <h3>BrewOS Cloud</h3>
            <p>Monitor temperatures, track shots, and control your machine from anywhere in the world. No server setup required.</p>
            <a href="https://cloud.brewos.io/?demo=true" class="cloud-btn" target="_blank">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <polygon points="5 3 19 12 5 21 5 3"/>
              </svg>
              Try the Demo
            </a>
          </div>
          <div class="cloud-hero-features">
            <div class="cloud-feature">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
              <span>Real-time Data</span>
            </div>
            <div class="cloud-feature">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 20V10"/><path d="M18 20V4"/><path d="M6 20v-4"/></svg>
              <span>Shot Analytics</span>
            </div>
            <div class="cloud-feature">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
              <span>Secure Access</span>
            </div>
            <div class="cloud-feature">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
              <span>OTA Updates</span>
            </div>
          </div>
        </div>

        <!-- Other Integrations Grid -->
        <div class="other-integrations">
          <span class="other-label">Works with your favorite platforms</span>
          <div class="other-grid">
            <a href="https://www.home-assistant.io/" target="_blank" class="other-card ha">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0L1.5 6v12L12 24l10.5-6V6L12 0zm0 2.25l8.25 4.695v9.39L12 21l-8.25-4.695v-9.39L12 2.25z"/>
              </svg>
              <div>
                <strong>Home Assistant</strong>
                <span>Native MQTT auto-discovery</span>
              </div>
            </a>
            <div class="other-card">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
              </svg>
              <div>
                <strong>MQTT</strong>
                <span>Any IoT platform</span>
              </div>
            </div>
            <div class="other-card">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/>
              </svg>
              <div>
                <strong>REST API</strong>
                <span>Full HTTP control</span>
              </div>
            </div>
            <div class="other-card">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
              </svg>
              <div>
                <strong>Webhooks</strong>
                <span>Trigger external services</span>
              </div>
            </div>
            <div class="other-card">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2"/><path d="M12 8v8"/><path d="M8 12h8"/>
              </svg>
              <div>
                <strong>Bluetooth Scales</strong>
                <span>Acaia, Felicita, Decent</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works" id="how-it-works">
    <div class="container">
      <div class="steps-header">
        <span class="section-label">Get Started</span>
        <h2>Up and Running in 4 Steps</h2>
      </div>
      <div class="steps-timeline">
        {steps.map((step, index) => (
          <div class="step-item">
            <div class="step-marker">{index + 1}</div>
            <div class="step-content">
              <h3>{step.title}</h3>
              <p>{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Get Started?</h2>
        <p>Join coffee enthusiasts building the future of home espresso.</p>
        <div class="cta-buttons">
          <a href="https://cloud.brewos.io/?demo=true" class="btn btn-cta-primary" target="_blank">
            Try the Demo
          </a>
          <a href="https://github.com/mizrachiran/brewos" class="btn btn-cta-secondary" target="_blank">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero styles */
  .hero {
    padding: 140px 0 100px;
    background: 
      linear-gradient(180deg, #fefcfa 0%, #faf5ef 40%, #f5ebe0 100%);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -20%;
    right: -10%;
    width: 60%;
    height: 120%;
    background: radial-gradient(ellipse, rgba(212, 112, 58, 0.08) 0%, transparent 60%);
    pointer-events: none;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(61, 43, 36, 0.15), transparent);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--white);
    border: 1px solid var(--cream-300);
    padding: 8px 16px;
    border-radius: 100px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: 24px;
    box-shadow: var(--shadow-sm);
  }

  .hero-badge .dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    color: var(--coffee-800);
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }

  .hero h1 span {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 40px;
    max-width: 480px;
  }

  .hero-cta {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .hero-stats {
    display: flex;
    gap: 40px;
    margin-top: 48px;
    padding-top: 32px;
    border-top: 1px solid var(--cream-300);
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 800;
    color: var(--coffee-800);
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 40px 80px rgba(26, 15, 10, 0.2));
    animation: float 6s ease-in-out infinite;
  }

  /* Features styles - Dark coffee theme */
  .features {
    padding: 100px 0;
    background: linear-gradient(180deg, #2a1f1a 0%, #1f1714 100%);
    position: relative;
    overflow: hidden;
  }

  .features::before {
    content: '';
    position: absolute;
    top: -30%;
    left: -10%;
    width: 50%;
    height: 100%;
    background: radial-gradient(ellipse, rgba(212, 112, 58, 0.08) 0%, transparent 60%);
    pointer-events: none;
  }

  .features::after {
    content: '';
    position: absolute;
    bottom: -20%;
    right: -5%;
    width: 40%;
    height: 80%;
    background: radial-gradient(ellipse, rgba(139, 90, 43, 0.06) 0%, transparent 55%);
    pointer-events: none;
  }

  .features .section-label {
    color: var(--accent-light);
    background: rgba(212, 112, 58, 0.15);
  }

  .features-layout {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 80px;
    align-items: start;
    position: relative;
    z-index: 1;
  }

  .features-header {
    position: sticky;
    top: 120px;
  }

  .features-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--cream-100);
    line-height: 1.2;
    margin-top: 16px;
  }

  .features-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .feature-item {
    display: flex;
    gap: 20px;
    padding: 28px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.2s ease;
  }

  .feature-item:first-child {
    padding-top: 0;
  }

  .feature-item:last-child {
    border-bottom: none;
  }

  .feature-item:hover {
    padding-left: 8px;
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .feature-item:hover .feature-icon {
    background: var(--accent);
    border-color: var(--accent);
  }

  .feature-icon svg {
    width: 24px;
    height: 24px;
    color: var(--accent-light);
    transition: all 0.2s ease;
  }

  .feature-item:hover .feature-icon svg {
    color: white;
  }

  .feature-content h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--cream-100);
    margin-bottom: 6px;
  }

  .feature-content p {
    font-size: 0.95rem;
    color: var(--cream-400);
    line-height: 1.6;
  }

  /* Integrations - Warm terracotta section */
  .integrations {
    padding: 120px 0;
    background: 
      linear-gradient(180deg, #faf5ef 0%, #f5ebe0 50%, #efe3d5 100%);
    position: relative;
    overflow: hidden;
  }

  .integrations::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(180deg, rgba(42, 31, 26, 0.03) 0%, transparent 100%);
    pointer-events: none;
  }

  .integrations::after {
    content: '';
    position: absolute;
    top: 20%;
    right: -5%;
    width: 35%;
    height: 60%;
    background: radial-gradient(ellipse, rgba(212, 112, 58, 0.06) 0%, transparent 60%);
    pointer-events: none;
  }

  .integrations-layout {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .integrations-header {
    text-align: center;
    margin-bottom: 56px;
  }

  .integrations-header h2 {
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--coffee-800);
    margin-top: 16px;
  }

  .integrations-desc {
    color: var(--text-secondary);
    font-size: 1.15rem;
    margin-top: 16px;
  }

  /* Cloud Hero Card */
  .cloud-hero {
    background: linear-gradient(135deg, var(--coffee-800) 0%, var(--coffee-900) 100%);
    border-radius: 28px;
    padding: 64px;
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 48px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 24px 80px rgba(45, 30, 20, 0.25);
  }

  .cloud-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 70%;
    height: 200%;
    background: radial-gradient(ellipse, rgba(212, 112, 58, 0.25) 0%, transparent 60%);
    pointer-events: none;
  }

  .cloud-hero-content {
    position: relative;
    z-index: 1;
  }

  .cloud-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 8px 18px;
    border-radius: 100px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--cream-300);
    margin-bottom: 20px;
  }

  .cloud-hero h3 {
    font-size: 2.6rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: 16px;
    letter-spacing: -0.02em;
  }

  .cloud-hero-content > p {
    color: var(--cream-400);
    font-size: 1.15rem;
    line-height: 1.7;
    margin-bottom: 32px;
  }

  .cloud-btn {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: var(--accent);
    color: white;
    padding: 18px 36px;
    border-radius: 14px;
    font-size: 1.05rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 0 8px 32px rgba(212, 112, 58, 0.35);
  }

  .cloud-btn:hover {
    background: var(--accent-light);
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(212, 112, 58, 0.45);
  }

  .cloud-hero-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    position: relative;
    z-index: 1;
  }

  .cloud-feature {
    display: flex;
    align-items: center;
    gap: 14px;
