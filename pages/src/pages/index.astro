                <line x1="10" y1="1" x2="10" y2="4" />
                <line x1="14" y1="1" x2="14" y2="4" />
              </svg>
            </div>
            <div class="compat-section-title">
              <h3>Machine Types</h3>
              <p>Automatic configuration for any architecture</p>
            </div>
          </div>
          <div class="machine-list">
            {machines.map(machine => (
              <div class="machine-item">
                <div class="machine-item-icon">{machine.icon}</div>
                <div class="machine-item-content">
                  <h4>{machine.title}</h4>
                  <p>{machine.description}</p>
                </div>
                <span class={`machine-item-status ${machine.status}`}>
                  {machine.status === 'supported' ? 'Supported' : 'Coming Soon'}
                </span>
              </div>
            ))}
          </div>
        </div>

        <!-- Integrations -->
        <div class="compat-section">
          <div class="compat-section-header">
            <div class="compat-section-icon">
