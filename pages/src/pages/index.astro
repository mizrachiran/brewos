                  </div>
                  <span class="integration-name">{int.name}</span>
                  {int.badge && <span class="integration-badge">{int.badge}</span>}
                </div>
                <p class="integration-desc">{int.description}</p>
                {int.features && (
                  <div class="integration-features">
                    {int.features.map(f => <span class="integration-feature">{f}</span>)}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works" id="how-it-works">
    <div class="container">
      <div class="section-header">
        <span class="section-label">How It Works</span>
        <h2 class="section-title">Get Started in 4 Simple Steps</h2>
        <p class="section-description">
          Transform your espresso machine in an afternoon with our easy installation process.
        </p>
      </div>
      <div class="steps">
        {steps.map((step, index) => (
          <div class="step">
            <div class="step-number">{index + 1}</div>
            <h3>{step.title}</h3>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Partners Section -->
  <section class="partners" id="partners">
    <div class="container">
      <div class="section-header">
        <span class="section-label">For Business</span>
        <h2 class="section-title">Partner with BrewOS</h2>
        <p class="section-description">
          Bring professional-grade firmware to your espresso machines. White-label solutions for manufacturers and integrators.
        </p>
      </div>
      <div class="partner-grid">
        {partners.map(partner => (
          <div class="partner-card">
            <div class="partner-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                {partner.icon === 'layers' && <><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></>}
                {partner.icon === 'cpu' && <><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></>}
                {partner.icon === 'cloud' && <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/>}
                {partner.icon === 'users' && <><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></>}
              </svg>
            </div>
            <h3>{partner.title}</h3>
            <p>{partner.description}</p>
          </div>
        ))}
      </div>
      <div class="partner-cta">
        <a href="/partnerships" class="btn btn-primary">
          Learn More About Partnerships
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      </div>
    </div>
