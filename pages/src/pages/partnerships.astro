---
import BaseLayout from '../layouts/BaseLayout.astro';

const offerings = [
  {
    icon: 'layers',
    title: 'White-Label Firmware',
    description: 'Get a fully customized version of BrewOS branded for your company.',
    features: ['Custom branding & logos', 'Tailored UI themes', 'Feature selection', 'Dedicated app builds']
  },
  {
    icon: 'cpu',
    title: 'Hardware Integration',
    description: 'We help you integrate BrewOS with your existing or new machine designs.',
    features: ['PCB design review', 'Component selection', 'Sensor integration', 'Power system design']
  },
  {
    icon: 'cloud',
    title: 'Cloud Platform',
    description: 'Use our cloud infrastructure or integrate with your existing platform.',
    features: ['Fleet management', 'Remote diagnostics', 'OTA updates', 'Analytics dashboard']
  },
  {
    icon: 'support',
    title: 'Engineering Support',
    description: 'Dedicated engineering resources for your integration project.',
    features: ['Priority support', 'Custom development', 'Testing & QA', 'Documentation']
  }
];

const useCases = [
  {
    title: 'Machine Manufacturers',
    description: 'Integrate BrewOS directly into your espresso machine production line for a premium, connected experience.',
    benefits: ['Reduce R&D costs', 'Faster time to market', 'Proven reliability', 'Regular updates']
  },
  {
    title: 'Retrofit Specialists',
    description: 'Offer BrewOS upgrades to your customers with full support and customization options.',
    benefits: ['Turnkey solution', 'Technical training', 'Marketing support', 'Volume pricing']
  },
  {
    title: 'Commercial Operators',
    description: 'Deploy BrewOS across your fleet of machines for centralized management and insights.',
    benefits: ['Fleet dashboard', 'Maintenance alerts', 'Usage analytics', 'Remote control']
  }
];
---

<BaseLayout 
  title="Partnerships - BrewOS White-Label Firmware for Espresso Machines"
  description="Partner with BrewOS to bring professional-grade firmware to your espresso machines. White-label solutions, hardware design support, and dedicated engineering for manufacturers."
  currentPath="/partnerships"
>
  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <span class="hero-badge">For Business</span>
      <h1>Partner with <span>BrewOS</span></h1>
      <p class="hero-description">
        Bring professional-grade firmware to your espresso machines. 
        White-label solutions for manufacturers, integrators, and commercial operators.
      </p>
      <a href="mailto:partnerships@brewos.io" class="btn btn-accent">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
          <polyline points="22,6 12,13 2,6"/>
        </svg>
        Contact Us
      </a>
    </div>
  </section>

  <!-- Offerings Section -->
  <section class="offerings">
    <div class="container">
      <div class="section-header">
        <span class="section-label">What We Offer</span>
        <h2 class="section-title">Partnership Solutions</h2>
        <p class="section-description">
          From firmware licensing to full turnkey solutions, we have the right partnership model for your needs.
        </p>
      </div>

      <div class="offerings-grid">
        {offerings.map(offering => (
          <div class="offering-card">
            <div class="offering-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                {offering.icon === 'layers' && <><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></>}
                {offering.icon === 'cpu' && <><rect x="4" y="4" width="16" height="16" rx="2" ry="2"/><rect x="9" y="9" width="6" height="6"/><line x1="9" y1="1" x2="9" y2="4"/><line x1="15" y1="1" x2="15" y2="4"/><line x1="9" y1="20" x2="9" y2="23"/><line x1="15" y1="20" x2="15" y2="23"/></>}
                {offering.icon === 'cloud' && <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/>}
                {offering.icon === 'support' && <><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></>}
              </svg>
            </div>
            <h3>{offering.title}</h3>
            <p>{offering.description}</p>
            <ul>
              {offering.features.map(feature => <li>{feature}</li>)}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="use-cases">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Who We Work With</span>
        <h2 class="section-title">Partnership Use Cases</h2>
      </div>

      <div class="use-cases-grid">
        {useCases.map(useCase => (
          <div class="use-case-card">
            <h3>{useCase.title}</h3>
            <p>{useCase.description}</p>
            <ul>
              {useCase.benefits.map(benefit => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready to Partner?</h2>
      <p>Let's discuss how BrewOS can power your espresso machines.</p>
      <div class="cta-buttons">
        <a href="mailto:partnerships@brewos.io" class="btn btn-accent">
          Get in Touch
        </a>
        <a href="/" class="btn btn-secondary">
          Learn More About BrewOS
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 140px 0 80px;
    background: linear-gradient(180deg, var(--cream-100) 0%, var(--cream-200) 100%);
    text-align: center;
  }

  .hero-badge {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--coffee-800);
    margin-bottom: 16px;
  }

  .hero h1 span {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 40px;
  }

  /* Offerings */
  .offerings {
    padding: 100px 0;
    background: linear-gradient(180deg, #2a1f1a 0%, #1f1714 100%);
    position: relative;
    overflow: hidden;
  }

  .offerings::before {
    content: '';
    position: absolute;
    top: -30%;
    left: -10%;
    width: 50%;
    height: 100%;
    background: radial-gradient(ellipse, rgba(212, 112, 58, 0.08) 0%, transparent 60%);
    pointer-events: none;
  }

  .offerings::after {
    content: '';
    position: absolute;
    bottom: -20%;
    right: -5%;
    width: 40%;
    height: 80%;
    background: radial-gradient(ellipse, rgba(139, 90, 43, 0.06) 0%, transparent 55%);
    pointer-events: none;
  }

  .offerings .container {
    position: relative;
    z-index: 1;
  }

  .offerings .section-label {
    color: var(--accent-light);
  }

  .offerings .section-title {
    color: var(--cream-100);
  }

  .offerings .section-description {
    color: var(--cream-400);
  }

  .offerings-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .offering-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 40px;
    transition: all 0.3s ease;
  }

  .offering-card:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--accent);
    box-shadow: 0 24px 48px rgba(0, 0, 0, 0.3);
  }

  .offering-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
  }

  .offering-icon svg {
    width: 32px;
    height: 32px;
    color: var(--white);
  }

  .offering-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--cream-100);
    margin-bottom: 12px;
  }

  .offering-card p {
    color: var(--cream-400);
    margin-bottom: 20px;
  }

  .offering-card ul {
    list-style: none;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
  }

  .offering-card li {
    font-size: 0.9rem;
    color: var(--cream-300);
    padding: 8px 12px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
  }

  /* Use Cases */
  .use-cases {
    padding: 120px 0;
    background: linear-gradient(180deg, #faf5ef 0%, #f5ebe0 50%, #efe3d5 100%);
    position: relative;
    overflow: hidden;
  }

  .use-cases::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(180deg, rgba(42, 31, 26, 0.03) 0%, transparent 100%);
    pointer-events: none;
  }

  .use-cases::after {
    content: '';
    position: absolute;
    top: 20%;
    right: -5%;
    width: 35%;
    height: 60%;
    background: radial-gradient(ellipse, rgba(212, 112, 58, 0.06) 0%, transparent 60%);
    pointer-events: none;
  }

  .use-cases .container {
    position: relative;
    z-index: 1;
  }

  .use-cases .section-label { 
    color: var(--accent);
  }
  
  .use-cases .section-title { 
    color: var(--coffee-800);
  }

  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .use-case-card {
    background: var(--white);
    border: 1px solid var(--cream-300);
    border-radius: 20px;
    padding: 32px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(61, 43, 36, 0.08);
  }

  .use-case-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(61, 43, 36, 0.15);
    border-color: var(--accent);
  }

  .use-case-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--coffee-800);
    margin-bottom: 12px;
  }

  .use-case-card p {
    color: var(--text-secondary);
    margin-bottom: 20px;
    font-size: 0.95rem;
  }

  .use-case-card ul {
    list-style: none;
  }

  .use-case-card li {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 8px;
  }

  .use-case-card li svg {
    color: var(--accent);
    flex-shrink: 0;
  }

  /* CTA */
  .cta-section {
    padding: 100px 0;
    background: linear-gradient(135deg, var(--cream-100) 0%, var(--cream-200) 100%);
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--coffee-800);
    margin-bottom: 16px;
  }

  .cta-section p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 32px;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 1024px) {
    .offerings-grid { grid-template-columns: 1fr; }
    .use-cases-grid { grid-template-columns: 1fr; }
  }

  @media (max-width: 768px) {
    .hero h1 { font-size: 2rem; }
    .offering-card ul { grid-template-columns: 1fr; }
  }
</style>

